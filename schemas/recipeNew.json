{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
        "username":{
            "type":"string"
        },
        "title":{
            "type":"string",
            "minLength": 1,
            "maxLength": 255
        },
        "recipe_description":{
            "type":"string"
        },
        "preparation_time":{
            "type":"integer"
        },
        "cooking_time":{
            "type":"integer"
        },
        "servings":{
            "type":"integer"
        },
        "ingredients":{
            "type":"array"
        },
        "categories":{
            "type":"array"
        },
        "tags":{
            "type":"array"
        }
    },
    "additionalProperties": false,
    "required": [
        "title",
        "username"
    ]
}